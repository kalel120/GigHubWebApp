@model GigHubWebApp.ViewModels.GigsViewModel
@{
    ViewBag.Title = "Home Page";
}

<h2>@Model.Heading</h2>
<ul class="gigs voffset10">
    @foreach (var gig in Model.UpcomingGigs) {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Artist.Name
                    @if (Model.IsAuthenticated) {
                        <button data-artist-id="@gig.ArtistId" class="btn btn-sm btn-link js-toggle-followArtist">Follow</button>
                    }
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                @if (Model.IsAuthenticated) {
                    <button data-gig-id="@gig.Id" class="btn btn-default pull-right js-toggle-attendance">Want to go?</button>
                }
            </div>
        </li>
    }
</ul>

@section scripts {
    <script>
        $(function () {
            $(".js-toggle-attendance").click(function (event) {
                var button = $(event.target);
                $.post("api/attendances", { gigId: button.attr("data-gig-id") })
                    .done(function () {
                        button.removeClass("btn-default").addClass("btn-info").text("Going");
                    }).fail(function () {
                        alert("Something went wrong");
                    });
            });

            $(".js-toggle-followArtist").click(function (event) {
                let followArtistBtn = $(event.target);
                $.post("api/following", { artistId: followArtistBtn.attr("data-artist-id") }).done(function () {
                    followArtistBtn.text("Following");
                }).fail(function () {
                    alert("Something went wrong");
                });
            });
        });
    </script>
}
