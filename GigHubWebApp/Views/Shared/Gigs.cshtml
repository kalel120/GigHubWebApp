@model GigHubWebApp.ViewModels.GigsViewModel
@{
    ViewBag.Title = Model.Heading;
}

<h2>@Model.Heading</h2>

@using (Html.BeginForm("Search", "Gigs")) {
    <div class="form-group">
        <div id="bs-search-gig" class="input-group">
            @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", placeholder = "Search by Genre, Artist, Venue.." })
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i>
            </span>
        </div>
    </div>
}
<ul class="gigs voffset10">
    @foreach (var gig in Model.UpcomingGigs) {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    <a href="@Url.Action("Details", "Gigs", new {id = gig.Id})">
                        @gig.Artist.Name
                    </a>

                    @if (gig.IsCanceled) {
                        <span class="label label-warning">Canceled</span>
                    }
                    @if (Model.IsAuthenticated) {
                        <button data-artist-id="@gig.ArtistId" class="btn btn-sm btn-link js-toggle-followArtist">Follow?</button>

                    }
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                @if (Model.IsAuthenticated && !gig.IsCanceled) {
                    <button data-gig-id="@gig.Id" class="btn @(Model.Attendences.Contains(gig.Id) ? "btn-info" : "btn-default") btn-sm pull-right js-toggle-attendance">
                        @(Model.Attendences.Contains(gig.Id) ? "Will Go!" : "Going?")
                    </button>
                }
            </div>
        </li>
    }
</ul>

@section scripts {
    <script>
        $(function () {
            GigsController.init();

            $(".js-toggle-followArtist").click(function (event) {
                let followArtistBtn = $(event.target);
                $.post("/api/following", { artistId: followArtistBtn.attr("data-artist-id") }).done(function () {
                    followArtistBtn.text("Following");
                }).fail(function () {
                    alert("Something went wrong");
                });
            });
        });
    </script>
}
